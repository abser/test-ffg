@parent

<script>

    $(document).ready(function () {
        $(".member-deactivate").click(function () {
            //  alert("hi edit");
            var member_deactivateId = $(this).data('member_deactivate_id');
            var member_status = $(this).data('member_status');
            // alert(club_id);

            $.ajax({
                type: 'POST',
                url: '/member/activateMember',
                data: {
                    member_id: member_deactivateId,
                    member_status: member_status
                },
                success: function (data) {
                    // alert(data);
                    window.alert('Action completed')
                    window.location.href = 'member';

                }
            });


        });
    });

</script>

