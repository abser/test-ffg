            <p>Enter a new password for <b><?php echo $email; ?></b>. We highly recommend you create a unique password - one that you don't use for any other websites.</p>
        </div>
        
        <div class="large-6 columns">
        
        	<?php echo Form::open(["route" => "auth.change-password", "autocomplete" => "off"]); ?>

        		        		
        		<?php echo Form::label("current_password", "Current Password"); ?>

                <?php echo Form::password("current_password", array("placeholder" => "••••••••••", 'autofocus' => 'autofocus')); ?>

                <?php if($error = $errors->first("current_password")): ?>
                <small class="error"><?php echo $error; ?></small>
                <?php endif; ?>
        		
        		<?php echo Form::label("password", "New Password"); ?>

                <?php echo Form::password("password", array("placeholder" => "••••••••••")); ?>

                <?php if($error = $errors->first("password")): ?>
                <small class="error"><?php echo $error; ?></small>
                <?php endif; ?>
                
                <?php echo Form::label("password_confirmation", "Confirm new password"); ?>

                <?php echo Form::password("password_confirmation", array("placeholder" => "••••••••••")); ?>

                <?php if($error = $errors->first("password_confirmation")): ?>
                <small class="error"><?php echo $error; ?></small>
                <?php endif; ?>               
        		
        		<?php echo Form::submit("Change Password", ['class' => 'button tiny']); ?>

        		
        		<a href="<?php echo URL::route('index'); ?>">
        		<?php echo Form::button("Cancel", array('class' => 'button tiny')); ?>

        		</a>
        		
        	<?php echo Form::close(); ?>        	
        </div>
    </div>
    
</div>
<?php $__env->stopSection(); ?>

