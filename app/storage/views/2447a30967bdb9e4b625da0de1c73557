		</tr>
	</thead>
	<tbody>
		<?php foreach($data['model'] as $key => $row): ?>
		<tr>
			<td><?php echo $row->id; ?></td>
			<td>
				<strong>
					<a href="<?php echo URL::route('service.edit', $row->id); ?>">
						<span class="<?php echo (Input::get('sort' ) == 'name')? 'sprim-sort' : ''; ?>"><?php echo ucfirst($row->name); ?></span>
					</a>
				</strong>
			</td>
			<td>
				<?php if( property_exists($row, 'service_category')): ?>
					<span class="<?php echo (Input::get('sort' ) == 'service_category')? 'sprim-sort' : ''; ?>">
						<?php echo ucfirst($row->service_category); ?> 
						<?php if(property_exists($row, 'service_sub_category') && $row->service_sub_category): ?>
