			<th><?php echo link_to_route($data['route'], 'Service Name', array_merge($data['append_url'], ['sort' => 'name'])); ?></th>
			<th><?php echo link_to_route($data['route'], 'Service Category', array_merge($data['append_url'], ['sort' => 'service_category'])); ?></th>	
			<th><?php echo link_to_route($data['route'], 'Club Name', array_merge($data['append_url'], ['sort' => 'club_name'])); ?></th>		
