<?php 
    $display = '';
    if(isset($form) && array_key_exists($file, $form) && is_object($form[$file])){
         $display = ($form[$file]->description)? $form[$file]->description : $form[$file]->name; 
    }
?>

<div class="form-group">
	<?php echo Form::label($file, ucwords((isset($label)? $label : $file)), ['class' => 'col-lg-3 control-label']); ?>

	<div class="col-lg-4">
		<?php echo Form::file($file,array('class' => 'clm-button', 'id' => $file, 'data-abide-validator' => 'filesize'));; ?>

        <small class="error">You can upload JPEG, GIF and PNG Image. Max file size is 2MB</small>
	</div>
    <div class="col-lg-5">
    	<?php if($display): ?>
        <div id="<?php echo $file; ?>_file">
        <?php echo $display; ?> <a id="delete_<?php echo $file; ?>"><i class="fi-trash"> delete</i></a>
        </div>
        <?php echo Form::hidden('delete_'.$file); ?>

        <?php $__env->startSection('js'); ?>
        @parent
        <script type="text/javascript">
            $(document).ready( function () {

                $("#delete_<?php echo $file; ?>").click(function(){
                    $("input[name='delete_<?php echo $file; ?>']").val('1');
                    $("#<?php echo $file; ?>_file").hide();
                });
            });
        </script>
        <?php $__env->stopSection(); ?>
        <?php endif; ?>
    </div>
</div>